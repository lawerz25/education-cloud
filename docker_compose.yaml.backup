version: '3.8'

services:
  frontend:
    build:
      context: ./frontend
      dockerfile: ../docker/frontend/Dockerfile
    ports:
      - "3000:80"
    volumes:
      - ./frontend:/usr/share/nginx/html:ro
    networks:
      - zotsport-network

  backend:
    build:
      context: ./backend
      dockerfile: ../docker/backend/Dockerfile
    ports:
      - "3001:3000"
    environment:
      - REDIS_HOST=redis
      - REDIS_PASSWORD=${REDIS_PASSWORD:-secret}
    volumes:
      - ./db:/db
    networks:
      - zotsport-network
    depends_on:
      - redis

  redis:
    image: redis:7-alpine
    command: redis-server --requirepass ${REDIS_PASSWORD:-secret}
    volumes:
      - redis-data:/data
    networks:
      - zotsport-network
    ports:
      - "6379:6379"

  proxy:
    build:
      context: ./proxy
      dockerfile: ../docker/proxy/Dockerfile
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./proxy/nginx.conf:/etc/nginx/nginx.conf:ro
    networks:
      - zotsport-network
    depends_on:
      - frontend
      - backend

  portainer:
    image: portainer/portainer-ce:latest
    command: -H unix:///var/run/docker.sock
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - portainer-data:/data
    ports:
      - "9000:9000"
    networks:
      - zotsport-network

  # ДОБАВЬ ЭТОТ КОНТЕЙНЕР для 6-го контейнера (DB Checker)
  db-checker:
    build:
      context: ./docker/sqlite
    volumes:
      - ./db:/data
    networks:
      - zotsport-network
    command: sh -c "sleep 3 && echo 'Database check completed' && exit 0"
    restart: "no"

networks:
  zotsport-network:
    driver: bridge

volumes:
  redis-data:
  portainer-data: